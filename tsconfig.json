{
  "compilerOptions": {
    "module": "es2020",
    "declaration": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "paths": {
      "ng-loadable-content": [
        "dist"
      ]
    },
    "target": "es2017",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "enableIvy": false
  }
}
